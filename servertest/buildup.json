{
  "name": "buildupserver",
  "tasks": {
    "default": {
      "type": "build.start",
      "language": "nodejs",
      "install": "npm install",
      "start": "npm start",
      "nodejs": {
        "version": "{sys.version.node}",
        "arch": "{sys.info.arch}"
      }
    },
    "test": {
      "type": "build:test",
      "language": "nodejs",
      "install": "npm install",
      "script": "npm test",
      "nodejs": {
        "version": [
          "stable",
          "{node.presents.lts}"
        ],
        "arch": "{sys.info.arch}"
      },
      "env": {
        "NODE_ENV": "dev",
        "CXX": "{sys.compiler}"
      },
      "apt": {
        "sources": [
          "ubuntu-r-toolchain"
        ],
        "packages": [
          "g++-4.8"
        ],
        "after": "I{set 'sys.compiler' -> 'g++-4.8' }"
      },
      "sys": {
        "docker_image": "ubuntu",
        "docker_image_tag": "latest"
      }
    }
  }
}
